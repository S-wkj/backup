#:kivy 1.9.0
#:import ttf font.ttf

<AttributeLabel>:
	color: 0, 0, 0, 1
	font_name: ttf
	font_size: 16
	text_size: self.size
	shorten: True
	shorten_from: 'right'

	size_hint: None, None
	size: 100, 20
	canvas.before:
		Color:
			rgba: .2, .2, .2, .2
		Line:
			rectangle: self.x, self.y, self.width, self.height

<FileLabel>:
	rows: 1
	size_hint: None, None
	size: 400, 20
	canvas.before:
		Color:
			rgba: self.space_color
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: self.frame_color
		Line:
			rectangle: self.x, self.y, self.width, self.height

<TitleLabel>:
	rows: 1
	size_hint: None, None
	size: 400, 20
	canvas.before:
		Color:
			rgba: .1, .5, .2, .4
		Line:
			rectangle: self.x, self.y, self.width, self.height

<ListLabel>:
	cols: 1
	size_hint: None, None
	size: 400, len(self.children) * 20

<ScrollView>:
	size_hint_x: None
	width: 500
	scroll_type: ['bars']
	do_scroll: True, True
	bar_width: 5

<FileManager>:
	cols: 1
	size_hint: .6, .9
	pos_hint: {'x': .05, 'top': .95}
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
