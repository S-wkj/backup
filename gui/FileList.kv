#:kivy 1.9.0

<AttributeLabel>:
	color: 0, 0, 0, 1
	font_size: 16
	text: 'abc'
	canvas:
		Color:
			rgba: .6, .7, 0, 1
		Line:
			rectangle: self.x, self.y, self.width, self.height

<FileLabel>:
	rows: 1
	canvas.before:
		Color:
			rgba: self.color
		Rectangle:
			pos: self.pos
			size: self.size

<ListLabel>:
	cols: 1
	size_hint: None, None
	size: 800, len(self.children) * 20


<DisplayScreen>:
	size_hint: .6, .9
	pos_hint: {'x': .05, 'top': .95}
	do_scroll: False, True
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size